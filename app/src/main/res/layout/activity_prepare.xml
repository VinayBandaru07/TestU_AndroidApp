<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PreapareLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Prepare">


    <TextView
        android:id="@+id/question_view"
        android:layout_width="338dp"
        android:layout_height="146dp"

        android:layout_marginTop="70dp"
        android:autoText="true"
        android:background="@color/white"
        android:fontFamily="sans-serif-light"
        android:freezesText="false"
        android:text="what is the capital of Andhra pradesh and india"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:autoSizeMaxTextSize="34sp"
        app:autoSizeMinTextSize="15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option3_view"
        android:layout_width="331dp"
        android:layout_height="111dp"

        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="15dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-light"
        android:text="Amaravathi, Delhi"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2_view"></TextView>

    <TextView
        android:id="@+id/option4_view"
        android:layout_width="329dp"
        android:layout_height="107dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="15dp"
        android:background="@color/white"

        android:fontFamily="sans-serif-light"
        android:text="Amaravathi, Delhi"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option3_view"></TextView>

    <TextView
        android:id="@+id/option1_view"
        android:layout_width="341dp"
        android:layout_height="97dp"
        android:layout_marginTop="180dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="15dp"
        android:background="@color/white"

        android:fontFamily="sans-serif-light"
        android:text="Amaravathi, Delhi"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/question_view"></TextView>

    <TextView
        android:id="@+id/option2_view"
        android:layout_width="334dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="15dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-light"
        android:text="Amaravathi, Delhi"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:autoSizeMaxTextSize="30sp"

        app:autoSizeMinTextSize="15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1_view"></TextView>

    <TextView
        android:id="@+id/PresentQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:text="Question-1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/GOTO"
        android:layout_width="69dp"
        android:layout_height="48dp"
        android:layout_marginStart="220dp"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:hint="GOTO"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/question_view"
        app:layout_constraintStart_toEndOf="@+id/PresentQuestion"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <ImageView
        android:id="@+id/nextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageView
        android:id="@+id/beforePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_rew" />




</androidx.constraintlayout.widget.ConstraintLayout>